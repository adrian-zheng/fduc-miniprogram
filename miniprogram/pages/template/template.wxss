/* FDUC-代表作品 template：songBlock */

.songBloc {
  --cell-group-inset-padding: 10rpx 30rpx 10rpx;
  --cell-background-color: #F5F5F5;
  --cell-border-color: #F5F5F5;
}


.introblock {
  margin: 2vw 3.8vw 2vw;
  background-color: #F5F5F5;
  border-radius: 8px;
  padding: 25rpx 50rpx 10rpx;
}

.titleBlock {
  display: flex;
  justify-content: space-between;
}

.songTitle {
  height: 33px;
  display: inline; 
  background-image: linear-gradient(0deg, #9408392d 50%, #F5F5F5 50.0001%, #F5F5F5); 
  font-size: x-large;
}

.credits {
  display: inline;
  color: #696969
}

.creditsTitle, .dscrTitle {
  border-bottom: 2px solid #9408392d;
  padding-top: 5px;
  font-weight: bold;
  display: inline !important;
}

/* .dscrTitle {
  font-size: 14px;
} */

.songText {
  text-align: justify;
  text-align-last: left;
  padding-top: 20px;
  color: #363636;
  font-size: 15px;
}

.img {
  display: flex;
  justify-content: center;
  padding: 25px 0 5px;
}

.play {
  text-align: center;
  color: #9408395b;
  text-indent: 0 !important;
  font-size: 12px;
}


/* 团员-SATB template：peopleTiles */

.reg-name {
  display: flex;
  justify-content: space-between;
}

.reg-bloc {
  display: flex;
  flex-direction: column;
}

.register, .name {
  height: 24px;
  display: inline; 
  font-size: 18px;
}

.name {
  text-align: right;
}

.register {
  width: 8vw;
  color: #696969;
  border-top-style: solid; 
  border-left-style: solid;
  border-color: #9408392d;
  border-width: 2px;
}

.position {
  padding-top: 2px;
  font-size: 12px;
  color: #8daaf8;
  text-align: right;
  font-weight: bold;
}

.inChoir {
  font-size: 12px; 
  color: #696969;
}

.name {
  font-weight: bold;
  background-image: linear-gradient(0deg, #9408392d 50%, #F5F5F5 50.0001%, #F5F5F5); 
}

.info {
  margin-top: 0.5vh;
  font-size: 12px;
}

.photo {
  margin-top: 1vh; 
  /* border-radius: 20rpx;  */
  width: 37vw; 
  height: 20vh;
}

.birthday {
  display: flex;
  justify-content: space-between;
  margin: 1.25vh 0 0.25vh;
  /* color: #81c0fa; */
  color:#e364a6;
  font-size: 14px;
  font-weight: bold;
}